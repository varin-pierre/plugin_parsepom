<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>parsepom</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>parsepom.plugin.description</description>
    <provider>parsepom.plugin.provider</provider>
    <provider-url>http://your.web.site.com</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2013 Your Company</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

	 <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>parsepom/custom.js</javascript-file>
        <javascript-file>parsepom/jquery.metadata.js</javascript-file>
        <javascript-file>parsepom/jquery.tablesorter.js</javascript-file>
        <javascript-file>parsepom/jquery-ui.js</javascript-file>
    </javascript-files>

    <!-- XPages parameters -->
    <applications>
    	<application>
            <application-id>parsepom</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.ParsepomXPage</application-class>
        </application>
        <application>
            <application-id>dependency</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.DependencyXPage</application-class>
        </application>
        <application>
            <application-id>site</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.SiteXPage</application-class>
        </application>
        <application>
            <application-id>parse</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.ParseXPage</application-class>
        </application>
         <application>
            <application-id>tools</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.ToolsXPage</application-class>
        </application>
    </applications>

	<daemons>
        <daemon>
            <daemon-id>parsepomCacheUpdater</daemon-id>
            <daemon-name>parsepom.daemon.cacheUpdater.name</daemon-name>
            <daemon-description>parsepom.daemon.cacheUpdater.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.parsepom.services.CacheUpdaterDaemon</daemon-class>
        </daemon>
    </daemons>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>