<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>parsepom</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>parsepom.plugin.description</description>
    <provider>parsepom.plugin.provider</provider>
    <provider-url>http://fr.lutece.paris.fr/fr/</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2015 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>PARSEPOM_MANAGEMENT</feature-id>
            <feature-title>parsepom.adminFeature.ManageParsepom.name</feature-title>
            <feature-description>parsepom.adminFeature.ManageParsepom.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/parsepom/ManageDependencys.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>dependency</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.DependencyXPage</application-class>
        </application>
        <application>
            <application-id>site</application-id>
            <application-class>fr.paris.lutece.plugins.parsepom.web.SiteXPage</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
     <portlet>
       <portlet-class>fr.paris.lutece.plugins.parsepom.business.portlet.ParsepomPortletHome</portlet-class>
	   <portlet-type-id>PARSEPOM_PORTLET</portlet-type-id>
	   <portlet-type-name>parsepom.portlet.parsepomParsepomPortlet.name</portlet-type-name>
	   <portlet-creation-url>plugins/parsepom/CreatePortletParsepom.jsp</portlet-creation-url>
	   <portlet-update-url>plugins/parsepom/ModifyPortletParsepom.jsp</portlet-update-url>
	   <portlet-create-action-url>plugins/parsepom/DoCreatePortletParsepom.jsp</portlet-create-action-url>
      <portlet-modify-action-url>plugins/parsepom/DoModifyPortletParsepom.jsp</portlet-modify-action-url>
	    <!-- optional entries -->
        <portlet-create-script-template>/admin/portlet/script_create_portlet.html</portlet-create-script-template>
        <portlet-modify-script-template>/admin/portlet/script_modify_portlet.html</portlet-modify-script-template>
        <portlet-create-specific-template>/admin/plugins/parsepom/portlet/create_portletparsepom.html</portlet-create-specific-template>
        <portlet-modify-specific-template>/admin/plugins/parsepom/portlet/modify_portletparsepom.html</portlet-modify-specific-template>
        <portlet-create-specific-form-template></portlet-create-specific-form-template>
        <portlet-modify-specific-form-template></portlet-modify-specific-form-template> 
     </portlet>
   </portlets>
</plug-in>